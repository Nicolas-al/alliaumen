{% extends 'base.html.twig' %}

{% block title %}Hello ModoController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<section class="modo_accueil">
   <button class="logout"><a href="{{path('app_logout')}}"> se déconnecter </a></button>
    <h1>Bienvenue sur la page de modération ✅</h1>

    Accéder à un projet pour réguler les commentaires : 
    <ul>
        {% for project in portfolio %}
        <li><strong> {{ project.id }} :</strong><a href="{{path('modo_project', {'id' : project.id} )}}">{{ project.title }}</a></li>
        {% endfor %}
    </ul>
</section>
{% endblock %}
