{% form_theme form 'bootstrap_4_layout.html.twig' %}

<div class="modal_contact">
    <div class="row" id="contact_form">
        <div class="col-lg-4 offset-lg-4 text-center">
            <h1>
            Contact
            </h1>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto"> 
    {{ form_start(form, {'action': path('target_route'), 'method': 'POST') }} 

    {{ form_row(form.Name, {'attr': {'placeholder': "Entrer votre Nom"}}) }}
    {{ form_row(form.FirstName, {'attr': {'placeholder' : "Entrer votre Prenom"}}) }}
    {{ form_row(form.Mail, {'attr': {'placeholder' : "Entrer votre Email"}}) }}
    {{ form_row(form.Message, {'attr': {'placeholder' : "Ecrivez votre message"}}) }}
    {{ form_row(form.Submit, {'attr': {'value' : "Envoyer", 'class' : 'submit_contact', }}) }}


    {{ form_end(form) }}

            </div>
        </div>
    </div>
</div>
