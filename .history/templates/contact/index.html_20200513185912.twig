{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}

<div class="row">
    <div class="col-lg-4 offset-lg-4 text-center">
        <h1>
        Contact
        </h1>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto"> 
{{ form_start(form) }} 

{{ form_row(form.Nom, {'attr': {'placeholder': "Entrer votre Nom"}}) }}
{{ form_row(form.Prenom, {'attr': {'placeholder' : "Entrer votre Prenom"}}) }}
{{ form_row(form.Email, {'attr': {'placeholder' : "Entrer votre Email"}}) }}
{{ form_row(form.Message, {'attr': {'placeholder' : "Ecrivez votre message"}}) }}
{{ form_row(form.Envoyer, {'attr': {'value' : "Envoyer"}}) }}


{{ form_end(form) }}

        </div>
    </div>
</div>
{% endblock %}
